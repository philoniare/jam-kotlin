<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress all debug/info logging for performance -->
    <root level="ERROR">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Only log errors from our code -->
    <logger name="io.forge.jam" level="ERROR" />
</configuration>
